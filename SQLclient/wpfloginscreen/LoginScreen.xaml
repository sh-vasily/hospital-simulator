<Window x:Class="wpfloginscreen.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="300" FontSize="14">
    
        <StackPanel Margin="20">
            <Label Content="Авторизация" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
        <Label Content="Имя пользователя" Foreground="Black"/>
        <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Label Content="Пароль" Foreground="Black"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="Black" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Войти" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    
</Window>
